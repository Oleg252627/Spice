@model IEnumerable<Eczamen.Entitie.MenuItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Menu item List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <thead>
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubCategory.NameSubCategory)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SubCategory.Category.NameCategory)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubCategory.NameSubCategory)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SubCategory.Category.NameCategory)
                        </td>
                        <partial name="_TableButtonPartial" model="@item.Id" />
                    </tr>
                }

                </tbody>
            </table>
        }
        else
        {
            <p>No menu item exists...</p>
        }
    </div>

</div>
