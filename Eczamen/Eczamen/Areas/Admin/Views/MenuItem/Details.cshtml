@model Eczamen.Entitie.MenuItem

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Details menu item</h2>
<br />

<div class="border backgroundWhite row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4"><label asp-for="@Model.Name" class="col-form-label"></label></div>
            <div class="col-8"><input asp-for="Name" class="form-control" readonly="readonly" /></div>
        </div>
        <div class="form-group row">
            <div class="col-4"><label asp-for="SubCategory.Category.NameCategory" class="col-form-label"></label></div>
            <div class="col-8"><input asp-for="SubCategory.Category.NameCategory" class="form-control" readonly="readonly" /></div>
        </div>
        <div class="form-group row">
            <div class="col-4"><label asp-for="SubCategory.NameSubCategory" class="col-form-label"></label></div>
            <div class="col-8"><input asp-for="SubCategory.NameSubCategory" class="form-control" readonly="readonly" /></div>
        </div>
        <div class="form-group row">
            <div class="col-4"><label asp-for="Price" class="col-form-label"></label></div>
            <div class="col-8"><input asp-for="Price" class="form-control" readonly="readonly" /></div>
        </div>
        <input asp-for="Id" type="hidden" />
        <input asp-for="Image" type="hidden" />
    </div>
    <div class="col-3 offset-1">
        <img src="@Model.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9" />
    </div>
    <div class="col-8">
        <div class="form-group row">
            <div class="col-8 offset-4">
                <div class="row">
                    <div class="col-6">
                        <partial name="_BacToEditButtonPartial" model="@Model.Id" />
                    </div>
                    <div class="col-6">
                        <partial name="_BacToListButtonPartial" />
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
