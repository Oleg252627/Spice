@model Eczamen.Models.MenuItemModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit Menu item</h2>
<br />

<form enctype="multipart/form-data" asp-action="Edit" method="post">
    <div class="border backgroundWhite row">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Image" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-sm-8">
            <div class="form-group row">
                <div class="col-4"><label asp-for="Name" class="col-form-label"></label></div>
                <div class="col-8"><input asp-for="Name" class="form-control" /></div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4"><label asp-for="Description" class="col-form-label"></label></div>
                <div class="col-8">@Html.TextAreaFor(m => m.Description)</div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4"><label asp-for="Price" class="col-form-label"></label></div>
                <div class="col-8"><input asp-for="Price" class="form-control" /></div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4"><label asp-for="Image" class="col-form-label"></label></div>
                <div class="col-8"><input type="file" name="files" multiple /></div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4"><label asp-for="SubCategoryId" class="col-form-label"></label></div>
                <div class="col-8"><select asp-for="SubCategoryId" class="form-control" asp-items="@Model.GetSelectListItem()"></select></div>
                <span asp-validation-for="SubCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4"><label asp-for="Spicyness" class="col-form-label"></label></div>
                <div class="col-8"><select asp-for="Spicyness" class="form-control" asp-items="Html.GetEnumSelectList<MenuItemModel.ESpicy>()"></select></div>
                <span asp-validation-for="SubCategoryId" class="text-danger"></span>
            </div>

        </div>
        <div class="col-sm-3 offset-1">
            <img src="@Model.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9" />
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col-6">
                            <partial name="_EditButtonPartial" />
                        </div>
                        <div class="col-6">
                            <partial name="_BacToListButtonPartial" />
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
    </script>
}

