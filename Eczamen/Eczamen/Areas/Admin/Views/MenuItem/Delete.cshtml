@model Eczamen.Entitie.MenuItem

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete menu item</h2>
<h3 class="text-danger">Are you sure you want to delete this?</h3>
<br />

<form asp-action="Delete" method="post">
    <div class="border backgroundWhite">
        <div class="form-group row">
            <div class="col-2"><label asp-for="@Model.Name" class="col-form-label"></label></div>
            <div class="col-5"><input asp-for="Name" class="form-control" readonly="readonly" /></div>
        </div>
        <div class="form-group row">
            <div class="col-2"><label asp-for="SubCategory.Category.NameCategory" class="col-form-label"></label></div>
            <div class="col-5"><input asp-for="SubCategory.Category.NameCategory" class="form-control" readonly="readonly" /></div>
        </div>
        <div class="form-group row">
            <div class="col-2"><label asp-for="SubCategory.NameSubCategory" class="col-form-label"></label></div>
            <div class="col-5"><input asp-for="SubCategory.NameSubCategory" class="form-control" readonly="readonly" /></div>
        </div>
        <div class="form-group row">
            <div class="col-2"><label asp-for="Price" class="col-form-label"></label></div>
            <div class="col-5"><input asp-for="Price" class="form-control" readonly="readonly" /></div>
        </div>
        <input asp-for="Id" type="hidden" />
        <input asp-for="Image" type="hidden" />
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <partial name="_DeleteButtonPartial" />
                    </div>
                    <div class="col-6">
                        <partial name="_BacToListButtonPartial" />
                    </div>
                </div>

            </div>
        </div>
    </div>

</form>
